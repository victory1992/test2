<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_item_goods"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_margin="15dp"
        android:background="@drawable/shape_item_goods"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_goods_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_item_goods"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/ll_item_goods"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:lines="2"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_item_goods"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/ll_item_goods"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_total_money_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>