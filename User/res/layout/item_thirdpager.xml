<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_item_carts_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:src="@drawable/pay_unchecked" />

    <LinearLayout
        android:id="@+id/ll_item_carts"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_item_carts_choose"
        android:background="@drawable/shape_item_goods"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_item_carts"
            android:layout_width="81dp"
            android:layout_height="81dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_carts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_item_carts"
        android:layout_toRightOf="@+id/ll_item_carts"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="我设计的一款穿鞋子的小猪猪，好可爱啊有木有"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_carts_guige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_carts_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/ll_item_carts"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="动画，鞋子"
        android:textColor="@color/gray_tv"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_item_carts"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/ll_item_carts"
        android:gravity="clip_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_carts_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_carts_title"
            android:layout_toRightOf="@+id/ll_item_carts"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="￥180.0"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="数量: "
                android:textColor="#6b6b6b"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_reduce" />

            <TextView
                android:id="@+id/tv_num_carts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/iv_add_reduce_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_tv"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_add" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_item_carts"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_line" />

</RelativeLayout>