<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_couple_stoke"
        android:orientation="horizontal"
        android:padding="1dp" >

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="7"
            android:background="#f8433d"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_coupon_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_coupon_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="新会员注册赠200元优惠券"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="使用期限"
                    android:textColor="@color/gray_tv"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_coupon_begin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="2016-01-01"
                    android:textColor="@color/gray_tv"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_coupon_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="2016-01-10"
                    android:textColor="@color/gray_tv"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_coupon_statu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/coupon_used" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>