<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dingapp.biz.page.swpiedelete.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/line"
                android:layout_width="55dp"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/view"
                android:layout_below="@+id/line"
                android:background="@drawable/bg_msg_time"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_pushnewslistitem_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="30"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pushnewslistitem_yearandmonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#969696"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pushnewslistitem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/ll_time"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textSize="15sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_pushnewslistitem_detail"
                android:layout_toRightOf="@+id/ll_time" />

            <TextView
                android:id="@+id/tv_pushnewslistitem_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_pushnewslistitem_title"
                android:layout_below="@+id/tv_pushnewslistitem_title"
                android:text=""
                android:textColor="#969696"
                android:textSize="13sp" />
        </RelativeLayout>
        <!-- delete区域的布局 -->

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#eeff0000"
            android:gravity="center"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </com.dingapp.biz.page.swpiedelete.SwipeLayout>

</LinearLayout>