<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_item_designerworks"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_margin="15dp"
        android:background="@drawable/shape_item_goods"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_item_designerworks"
            android:layout_width="81dp"
            android:layout_height="81dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_designerworks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_item_designerworks"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/ll_item_designerworks"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="我设计的一款穿鞋子的小猪猪，好可爱啊有木有"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_designerworks_guige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_designerworks_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/ll_item_designerworks"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/gray_tv"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_item_designerworks"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/ll_item_designerworks"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_designerworks_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_designerworks_title"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ll_item_designerworks"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="￥180.0"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_item_designerworks_numsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_designerworks_title"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ll_item_designerworks"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="已出售120件"
            android:textColor="@color/gray_tv"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>