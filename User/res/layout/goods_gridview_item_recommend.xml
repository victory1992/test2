<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_pic_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_des_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="11dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/tv_factoring_price_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:text="积分:"
            android:textColor="@color/gray_tv"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_factoring_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:textColor="@color/yellow"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_pic_vip_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/iv_vip_tag"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_nomal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/gray_tv"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>